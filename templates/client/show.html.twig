{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ client.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.tel }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ client.mail }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adr }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ client.user }}</td>
            </tr>
        </tbody>
    </table>


    <div class="row">
        <div class="col-1">
        <a href="{{ path('app_client_index') }}" class="btn btn-primary">Back</a>
        </div><div class="col-1">
        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-success">Edit</a>
        </div><div class="col-1">
        {{ include('client/_delete_form.html.twig') }}
        </div></div></div>
{% endblock %}
