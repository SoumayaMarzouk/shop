{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Qt</th>

            </tr>
        </thead>
        <tbody>
        {% for ligne_panier in panier %}
            <tr>
                <td>{{ ligne_panier.produit.libelle }}</td>
                <td>{{ ligne_panier.produit.prix }}</td>
                <td>{{ ligne_panier.qt }}</td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Back</a>
</div>
{% endblock %}
