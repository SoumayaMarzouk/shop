{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-1">
        <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back</a>
        </div><div class="col-1">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a>
        </div><div class="col-1">
            {{ include('user/_delete_form.html.twig') }}
        </div></div></div>

{% endblock %}
